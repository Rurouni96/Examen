<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Examen.Views.PageCont">
    <ContentPage.Content>
        <StackLayout>

            <Image Source="https://web.ucenm.net/wp-content/themes/edumy/images/logo.png"
                   VerticalOptions="CenterAndExpand">

            </Image>

            <Label Text="Ingrese contacto"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Entry x:Name="txtnombres" Placeholder="Ingrese nombres" Keyboard="Text" />

            <Entry x:Name="txtapellidos" Placeholder="Ingrese apellidos" Keyboard="Text" />

            <Entry x:Name="txtedad" Placeholder="Ingrese la edad" Keyboard="Numeric" />

            <Entry x:Name="txtpais" Placeholder="Ingrese el pais" Keyboard="Text" />

            <Entry x:Name="txtnota" Placeholder="Ingrese nota" Keyboard="Text" />

            <Button x:Name="btnagregar" Text="Agregar" Clicked="btnagregar_Clicked" />
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>