<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Examen.Views.PageElim">
    <ContentPage.Content>
        <StackLayout>

            <Image Source="https://web.ucenm.net/wp-content/themes/edumy/images/logo.png"
                   VerticalOptions="CenterAndExpand">

            </Image>

            <Label Text="Eliminar Contacto"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Label Text="Codigo ID:"
                VerticalOptions="CenterAndExpand" >
                
            </Label>

            <Entry x:Name="txtcodigoId" Placeholder="Ingrese el Id" Keyboard="Text" />

            <Button x:Name="btnelim" Text="Eliminar" Clicked="btnelim_Clicked" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>